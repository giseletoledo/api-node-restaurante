{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "paths": {
      "a/*": ["./src/*"]
    },
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Opcional: diretório de saída para os arquivos compilados
    "rootDir": "./src"  // Especifica o diretório raiz dos arquivos TypeScript
  },
  "include": ["src/**/*.ts"], // Inclui todos os arquivos TypeScript na pasta src
  "exclude": ["node_modules"] // Exclui a pasta node_modules
}
